<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="myBackground">@android:color/holo_purple</item>
        <!--<item name="android:textSize">20dp</item>-->
    </style>


    <style name="AppTheme.Font">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="AppTheme.Font.Bold">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="AppTheme.Font.Medium">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="AppTheme.Font.Medium.Italic">
        <item name="android:fontFamily">@font/roboto_medium_italic</item>
    </style>

    <style name="AppTheme.Font.Light">
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <!--  <style name="TextViewTextAppearance" parent="Widget.Design.CollapsingToolbar">
          <item name="android:fontFamily">@font/roboto_medium</item>
          <item name="textAllCaps">false</item>
          <item name="android:textViewStyle">@style/AppTheme.Font</item>
          <item name="android:textAppearance">@style/AppTheme.Font</item>
      </style>-->

    <style name="TextViewBoldLightGray">
        <item name="android:textAppearance">@style/AppTheme.Font.Medium.Italic</item>
        <item name="android:textColor">@color/textColorGrayOnWhiteBackground</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="LibTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="myBackground">@color/colorPrimary</item>
        <item name="myTextViewFontFamily">@style/AppTheme.Font.Bold</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>